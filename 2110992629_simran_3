B)
import matplotlib.pyplot as plt
import pandas as pd
df = pd.read_csv("1_crop.csv")
plt.hist(df["age"])
plt.show()


C)
import matplotlib.pyplot as plt import pandas as pd
df = pd.read_csv("1_crop.csv")
crop = df.groupby("Crop")["Yield"].sum().round(1)
plt.plot(crop)
plt.xlabel("Crops")
plt.ylabel("Yield")
plt.show()


Question 2
import numpy as np

todo_list = np.array([])

while True:
    print("\nTodo List Menu:")
    print("1. Add Task")
    print("2. View Tasks")
    print("3. Delete Task")
    print("4. Exit")
    choice = int(input("Enter your choice: "))

    def add_task():
        task = input("Task to enter: ")
        todo_list = np.append(todo_list, task)
        print("Task added successfully!")

    def view_tasks():
        if todo_list.size == 0:
            print("No tasks in the list.")
        else:
            print("Tasks:")
            for i, task in enumerate(todo_list, 1):
                print(f"{i}. {task}")

    def delete_task():
        if todo_list.size == 0:
            print("No tasks to delete.")
        else:
            view_tasks()
            index = int(input("Enter index to delete: "))
            if 1 <= index <= len(todo_list):
                todo_list = np.delete(todo_list, index - 1)
                print("Task deleted successfully!")
            else:
                print("Invalid index.")

    def exit_program():
        print("EXIT")
        quit()

    switch = {
        1: add_task,
        2: view_tasks,
        3: delete_task,
        4: exit_program,
    }

    chosen_function = switch.get(choice, lambda: print("Invalid choice. Please choose again."))
    chosen_function()
